<div class = "container">
    {{#if name}}
        <h1 class = "name">Hello, {{name}}!</h1>
        {{else}}
        <h1 class = "name">Hello!</h1>
    {{/if}}
    <h1>{{compliment}}</h1>
    {{#if name}}
