        <div class="button compliment">Next</div>
    </a>
    {{else}}
    <a href="/">
        <div class="button compliment">Next</div>
    </a>
    {{/if}}
    <a href="/new-compliment">
        <div class = "button compliment">New Compliment</div>
    </a>
</div>